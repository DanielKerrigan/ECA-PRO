{
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		"skipLibCheck": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"target": "ES2022",
		"allowJs": true
	},
	"include": [
		"src/main/**/*.ts",
		"src/preload/**/*.cts",
		"src/shared/**/*.ts",
		"src/preload/preload.ts"
	]
}
